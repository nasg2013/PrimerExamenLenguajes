<!-- Modal Details -->
<div class="modal fade" id="myModalDetails" tabindex="-1" role="dialog" hidden>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="titleModal" class="modal-title"> Details Student </h4>
            </div>
            <div class="modal-body">
                <form id="studentFormDetails" autocomplete="off">

                    <div class="form-group col-md-6">
                        <label for="StudentId">ID</label>
                        <input type="text" class="form-control" id="StudentIdD" disabled="disabled" readonly>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="NameD" disabled="disabled" readonly>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Age">Age</label>
                        <input type="number" class="form-control" id="AgeD" disabled="disabled" readonly>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Nationality">Nationality</label>
                        <input type="text" class="form-control" id="NationalityD" disabled="disabled" readonly>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Major">Major</label>
                        <input type="text" class="form-control" id="MajorD" disabled="disabled" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Seniority">Seniority</label>
                        <input type="text" class="form-control" id="SeniorityD" disabled="disabled" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="EntryDate">EntryDate</label>
                        <input type="date" class="form-control" id="EntryDateD" disabled="disabled" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Interests">Interests</label>
                        <input type="text" class="form-control" id="InterestsD" disabled="disabled" readonly>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Modal Add-Update*@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" hidden>

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 id="titleModal" class="modal-title"> Add Student </h4>

            </div>
            <div class="modal-body">

                <form id="studentForm" autocomplete="off">
                    <div class="form-group">
                        <label for="StudentId">ID</label>
                        <input type="text" class="form-control" id="StudentId" placeholder="ID" disabled="disabled" required>
                    </div>

                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" required>
                    </div>

                    <div class="form-group">
                        <label for="Age">Age</label>
                        <input type="number" class="form-control" id="Age" placeholder="Age" min="1" required>
                    </div>

                    <div class="form-group">
                        <label for="Nationality">Nationality</label>
                        <select class="form-control" id="NationalitiesDropdown" name="NationalitiesDropdown"></select>

                    </div>

                    <div class="form-group">
                        <label for="Major">Major</label>
                        <select class="form-control" id="MajorsDropdown" name="MajorDropdown"></select>

                    </div>

                    <p id="error" style="color:red"></p>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" onclick="return Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete-->
<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Delete</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 style="color:red">Are you sure you want to delete the student?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnDelete">Delete forever</button>
            </div>
        </div>
    </div>
</div>

