@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h1>View MVC-API</h1>
<br />
<br />
<br />
<br />
<!-- Search Api -->
<div class="row">
    <div class="col-md-8">
        <button id="btnModalApi" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalApi" onclick="clearTextBox();">Add New Student </button>
    </div>
    <div class="col-md-4">
        <br />
        <form class="form-inline my-2 my-lg-0" autocomplete="off">
            <input class="form-control mr-sm-2" type="search" placeholder="Search by name" aria-label="Search" id="inputSearchStudentApi">
            <button class="btn btn-outline-success my-2 my-sm-0" type="button" onclick="SearchApi()" id="btnSearchStudentApi">Search</button>
        </form>
    </div>
</div>
<br />
<br />

<!-- Table student Api -->
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-12 table-responsive">
        <table id="tableApi" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>StudentID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Nationality</th>
                    <th>Major</th>
                    <th>Seniority</th>
                    <th>EntryDate</th>
                    <th>Interests</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Details Api -->
<div class="modal fade" id="myModalDetailsApi" tabindex="-1" role="dialog" hidden>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="titleModal" class="modal-title"> Details Student </h4>
            </div>
            <div class="modal-body">
                <form id="studentFormDetailsApi" autocomplete="off">
                    <fieldset disabled>

                        <div class="form-group col-md-6">
                            <label for="StudentIdDApi">ID</label>
                            <input type="text" class="form-control" id="StudentIdDApi" disabled="disabled" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="NameDApi">Name</label>
                            <input type="text" class="form-control" id="NameDApi" disabled="disabled" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="AgeD">Age</label>
                            <input type="number" class="form-control" id="AgeDApi" disabled="disabled" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="NationalityDApi">Nationality</label>
                            <select class="form-control" id="NationalityDApi" name="NationalityDApi"></select>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="MajorDApi">Major</label>
                            <select class="form-control" id="MajorDApi" name="MajorDApi"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="SeniorityDApi">Seniority</label>
                            <input type="text" class="form-control" id="SeniorityDApi" disabled="disabled" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="EntryDateDApi">EntryDate</label>
                            <input type="date" class="form-control" id="EntryDateDApi" disabled="disabled" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InterestsDApi">Interests</label>
                            <input type="text" class="form-control" id="InterestsDApi" disabled="disabled" readonly>
                        </div>
                    </fieldset>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@*Modal Add-Update*@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" hidden>

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 id="titleModal" class="modal-title"> Add Student </h4>

            </div>
            <div class="modal-body">

                <form id="studentForm" autocomplete="off">
                    <div class="form-group">
                        <label for="StudentId">ID</label>
                        <input type="text" class="form-control" id="StudentId" placeholder="ID" disabled="disabled" required>
                    </div>

                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" required>
                    </div>

                    <div class="form-group">
                        <label for="Age">Age</label>
                        <input type="number" class="form-control" id="Age" placeholder="Age" min="1" required>
                    </div>

                    <div class="form-group">
                        <label for="Nationality">Nationality</label>
                        <select class="form-control" id="NationalitiesDropdown" name="NationalitiesDropdown"></select>

                    </div>

                    <div class="form-group">
                        <label for="Major">Major</label>
                        <select class="form-control" id="MajorsDropdown" name="MajorDropdown"></select>

                    </div>

                    <p id="error" style="color:red"></p>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" onclick="return Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete-->
<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel">Delete</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 style="color:red">Are you sure you want to delete the student?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnDelete">Delete forever</button>
            </div>
        </div>
    </div>
</div>

